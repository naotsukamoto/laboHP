<!DOCTYPE html>
<html>
  <head>
    <title><%= page_title %></title>
    <%= csrf_meta_tags %>

    <!-- determining js url for googlemap -->
    <script type="text/javascript" src="//maps.google.com/maps/api/js?key=AIzaSyCFRoUpF1tr1fr5KFwjvRIa7HkI3agNtcY"></script>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- back to pagetop with bootstrap -->
    <p id="page-top" class="prelude"><a href="#">PAGE TOP</a></p>

    <!-- flash message from devise-->
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <!-- container -->
    <div id="container">
      <!-- header -->
      <div id="header" style="background-image:url(<%= asset_path "header.jpg" %>)">
        <div class="layerTransparent">
          <%= render "shared/header" %>
        </div>
      </div>
      <hr id="header-bottom">


      <!-- breadcrumbs:パンくずリスト -->
      <ul class="breadcrumb">
        <%= making_breadcrumb(0) if now_path.empty? %>
        <% (0...now_path.length).each do |i| %>
        <%= making_breadcrumb(i) %>
        <% end %>
      </ul><!-- breadcrumb fin.-->

      <!-- contents -->
      <div id="contents" >
        <%= yield %>
      </div>

      <!-- footer -->
      <div id="footer">
        <%= render "shared/footer" %>
      </div>

    </div><!-- container fin.-->


  </body>
</html>
