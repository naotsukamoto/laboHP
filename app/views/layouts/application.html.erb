<!DOCTYPE html>
<html>
  <head>
    <title><%= page_title %></title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="container">
      <!-- header -->
      <div id="header">
        <div class="layerTransparent">
          <%= render "shared/header" %>
        </div>
      </div>
      <hr id="header-bottom">


      <!-- breadcrumbs:パンくずリスト -->
      <ul class="breadcrumb">
        <li><a href="/"><%= get_path_name(0) %></a></li>
        <li><a href="<%= get_path(1) %>"><%= get_path_name(1) %></a></li>
        <li><a href="<%= get_path(2) %>"><%= get_path_name(2) %></a></li>
      </ul><!-- breadcrumb -->

      <div id="contents" >
        <%= yield %>
      </div>

      <div id="footer">
        <%= render "shared/footer" %>
      </div>
    </div><!-- container -->

  </body>
</html>
