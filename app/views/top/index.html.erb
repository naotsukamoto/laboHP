
<body>
  <h2 class="contents-msg">Welcome to Tohno Labo HP!</h2>

  <!-- Bootstrap: Carousel -->
  <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
      <li data-target="#carousel-example-generic" data-slide-to="1"></li>
      <li data-target="#carousel-example-generic" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
      <div class="item active">
        <%= image_tag("all_1.jpg", :alt => "At the Wellcome Party") %>
        <div class="carousel-caption">
        </div>
      </div>
      <div class="item">
        <%= image_tag("all_2.jpg", :alt => "At Softball Comp.") %>
        <div class="carousel-caption">
        </div>
      </div>
      <div class="item">
        <%= image_tag("all_3.jpg", :alt => "At The Wellcome Party") %>
        <div class="carousel-caption">
        </div>
      </div>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div><!-- Bootstrap: Carousel -->

  <!-- search form -->
  <div class="search-box">
    <%= search_form_for @search, url: root_path do |f| %>
    <%= f.label :content_cont, 'Search News Head' %></br>
    <%= f.text_field :content_cont, :class => "form-control" %>
    <%= f.submit 'search', :class => 'btn btn-success' %>
    <%- end -%>
  </div>

  <!-- News Head -->
  <div class="news">
    <div class="news-header">
      <span class="table-title">News Head Lineup</span>
      <span class="page-info"><%= page_entries_info @heads, :remote => true %></span>
    </div>
    <table class="table-mainBox">
      <tbody>
        <tr class="head">
            <th id="head">Date</th>
            <td class="data fst" id="head">
                News Head
            </td>
        </tr>

        <%= render :partial => "head" %>

        <!-- News Head fin-->

      </tbody>
    </table>
  </div><!-- News Head fin.-->

  <!-- Read more link -->
  <div class="read-more">
    <%= link_to_next_page @heads, 'more', :remote => true, :class => 'glyphicon glyphicon-chevron-down'%>
  </div><!-- Read more link fin.-->
  <!-- Read more link -->
  <div class="read-back">
    <%= link_to_previous_page @heads, 'back', :remote => true, :class => 'glyphicon glyphicon-chevron-up'%>
  </div><!-- Read more link fin.-->
</body>
